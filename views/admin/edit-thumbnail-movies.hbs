<section>
    <div class="container">
        <div class="row">
            <div class="colmd-6">
                <h2 class="text-center">Edit Thumb Movies</h2>
                <form action="/admin/edit-thumbnail-movies/{{tmovies._id}}" method="POST" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{tmovies.Name}}">

                  
                     <label for="">price</label>
                    <input type="text" name="price" class="form-control" value="{{tmovies.price}}">

                    

                    <label for="">Trailer Link</label>
                    <input type="text" name="Link" class="form-control" value="{{tmovies.Link}}">
                    
                     <label for="">image</label>
                     <img src="/images/{{tmovies._id}}.jpg" alt="" style="width: 100px; height: auto;" id="imgView">
                    <input name="image" type="file"class="form-control" onchange="viewImage(event)">

                    <button type="submit" class="btn btn-success mt-4">submit</button>
                </form>
            </div>

        </div>
    </div>
</section>