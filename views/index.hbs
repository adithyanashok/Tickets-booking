
    <section style="float: left;">
        <h4 class="mt-2 text-center">Movies</h4>

        <div class="row">
            {{#each movies}}
            <div class="col-sm-5 col-lg-3 col-12" style="float: left;">
                <div class="card m-4" style="width: 14rem;">
                    <img style="height: 300px;" src="{{this.image}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p>{{this.price}}</p>
                        <p class="card-text">{{this.description}}</p>
                        <a href="#" class="btn btn-primary">Book Ticket</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>


